<h1>Awesome ideas</h1>

<ul id="ideas" class="row">
<% @ideas.each do |idea| %>
  <li class="idea col-md-4 col-sm-6">
    <a href="<%= url_for idea %>">
      <%= image_tag(idea.picture_url, :width => 300, :height => 300) if idea.picture.present? %>
    </a>
    <div class="container detail">
      <h3><%= idea.name %></h3>
      <span><%= idea.description %></span>
      <%= link_to "Delete", idea, remote: true, method: :delete %>
    </div>
  </li>
<% end %>
</ul>

<div id="actions">
  <%= link_to 'New Idea', new_idea_path %>
</div>
